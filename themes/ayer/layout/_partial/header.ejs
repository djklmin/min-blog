<header class="header">
    <div class="container">
        <div class="header-inner">
            <div class="site-brand">
                <a href="<%= config.url %>" class="logo">
                    <% if (theme.logo) { %>
                        <img src="<%= url_for(theme.logo) %>" alt="<%= config.title %>">
                    <% } else { %>
                        <h1><%= config.title %></h1>
                    <% } %>
                </a>
            </div>

            <nav class="site-nav">
                <ul class="menu">
                    <% for (const path in theme.menu) { %>
                        <li class="menu-item">
                            <a href="<%= url_for(theme.menu[path]) %>" class="menu-link">
                                <%= path %>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>

            <button class="menu-toggle" aria-label="Toggle menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </div>
</header>